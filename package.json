{
    "name": "application",
    "version": "0.0.1",
    "description": "an application",
    "main": "app.js",
    "scripts": {
        "uploadcdn": "node uploadcdn.js",
        "start": "node --max_old_space_size=4096  ./bin/dev.js",
        "pre": "cross-env NODE_ENV=pre_development node ./bin/build.js && cross-env NODE_ENV=pre_development gulp && cross-env NODE_ENV=pre_development node ./bin/pre.js",
        "build": "cross-env NODE_ENV=production node ./bin/build.js && cross-env NODE_ENV=production gulp",
        "build:test": "cross-env NODE_ENV=staging node ./bin/build.js && cross-env NODE_ENV=staging gulp",
        "test": "mocha -t 20000 tests --recursive --exit | bunyan",
        "eslint": "eslint ./client/**/*.js && eslint ./client/**/*.jsx",
        "eslint_fix": "eslint ./client/** --fix",
        "api_eslint": "eslint ./app.js && eslint ./biz/**/**/**.js",
        "api_fix": "eslint ./app.js --fix && eslint ./biz/**/js --fix",
        "docker_create": "docker build -t web_channel_spring -f dockerfilepre .",
        "docker_start": "docker run --rm --name web_channel_spring -p 3000:3000 -it web_channel_spring:latest",
        "docker_stop": "docker stop web_channel_spring",
        "docker_delete": "docker image rm web_channel_spring",
        "start:dev": "webpack-dev-server",
        "recent_changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
        "all_changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
        "check": "node ./bin/check.js"
    },
