        }
    },
    "lint-staged": {
        "linters": {
            "./client/**/*.{js,jsx,json,css,md}": [
                "prettier --write",
                "git add"
            ],
            "./client/**/*.js": "eslint",
            "./client/**/*.jsx": "eslint",
            "./app.js": "eslint",
            "./biz/**/**/**.js": "eslint"
        },
